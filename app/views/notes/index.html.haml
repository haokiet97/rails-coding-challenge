%h1= t('.title')
%p= link_to t('.new_note'), new_note_path

%table
  %thead
    %tr
      %th= Note.human_attribute_name :text
      %th{:colspan => 3}= t 'actions'

  %tbody
    - for note in @notes
      %tr{ :class => cycle(:odd, :even) }
        %td= note.text
        %td.action= link_to t('show'), note
        %td.action= link_to t('edit'), edit_note_path(note)
        %td.action= link_to t('destroy'), note, data: { confirm: t('are_you_sure') }, :method => :delete
