!!!
%html{:lang => "en"}
	%head
		%meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}
		%title
			= content_for?(:title) ? yield(:title) : "Satori"

		/ STYLESHEETS
		= stylesheet_link_tag 'bootstrap/css/bootstrap.min.css'
		= stylesheet_link_tag 'base/admin.css?v20171128.01'
		= stylesheet_link_tag(section_stylesheet 'v20171128.01')

		= csrf_meta_tag

	%body{ :id => identified_controller_name, :class => section_controller_classes }
		#body
			= render "shared/main_nav"

			#main-content
				= render "shared/status_bar"
				= yield

		/ COMMON JAVASCRIPT
		= javascript_include_tag "https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"

		/ PAGE SPECIFIC JAVASCRIPT
		= yield :javascript
